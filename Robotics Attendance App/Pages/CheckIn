import React, { useState, useEffect } from 'react';
import { base44 } from '@/api/base44Client';
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { CheckCircle2, Clock, Users, Loader2 } from 'lucide-react';
import { motion, AnimatePresence } from 'framer-motion';

const TEAMS = ["Fractal Fusion", "A Byte Irrational", "N.U.T.S", "Rubber Bandits", "Short Circuit", "Loose Screws", "Cattlebots", "Clockwork Mania"];

export default function CheckIn() {
  const [name, setName] = useState('');
  const [team, setTeam] = useState('');
  const [hours, setHours] = useState('');
  const [minutes, setMinutes] = useState('');
  const [period, setPeriod] = useState('PM');
  const [isSubmitting, setIsSubmitting] = useState(false);
  const [isSuccess, setIsSuccess] = useState(false);
  const [error, setError] = useState('');
  const [students, setStudents] = useState([]);
  const [filteredStudents, setFilteredStudents] = useState([]);
  const [showSuggestions, setShowSuggestions] = useState(false);
  const [showTimeInput, setShowTimeInput] = useState(false);

  useEffect(() => {
    loadStudents();
    // Set current time automatically
    const now = new Date();
    let h = now.getHours();
    const m = now.getMinutes();
    const p = h >= 12 ? 'PM' : 'AM';
    h = h % 12 || 12;
    setHours(h.toString());
    setMinutes(m.toString().padStart(2, '0'));
    setPeriod(p);
  }, []);

  const loadStudents = async () => {
    const data = await base44.entities.Student.list();
    setStudents(data);
  };

  useEffect(() => {
    if (name.length > 0) {
      const filtered = students.filter(s => 
        s.name.toLowerCase().includes(name.toLowerCase())
      );
      setFilteredStudents(filtered);
      setShowSuggestions(filtered.length > 0);
    } else {
      setFilteredStudents([]);
      setShowSuggestions(false);
    }
  }, [name, students]);

  const selectStudent = (student) => {
    setName(student.name);
    setShowSuggestions(false);
    setError('');
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    setError('');

    const matchedStudent = students.find(s => 
      s.name.toLowerCase() === name.toLowerCase()
    );

    if (!matchedStudent) {
      setError('Student not found in the system. Please check your name.');
      return;
    }

    if (!team) {
      setError('Please select your team.');
      return;
    }

    if (!hours || !minutes) {
      setError('Please enter the time.');
      return;
    }

    const h = parseInt(hours);
    const m = parseInt(minutes);
    if (h < 1 || h > 12 || m < 0 || m > 59) {
      setError('Please enter a valid time.');
      return;
    }

    setIsSubmitting(true);

    const checkInTime = `${hours}:${minutes.padStart(2, '0')} ${period}`;
    const today = new Date().toISOString().split('T')[0];

    await base44.entities.Attendance.create({
      student_name: matchedStudent.name,
      school_id: matchedStudent.school_id,
      team: team,
      check_in_time: checkInTime,
      date: today
    });

    setIsSubmitting(false);
    setIsSuccess(true);

    setTimeout(() => {
      setIsSuccess(false);
      setName('');
      setTeam('');
      setShowTimeInput(false);
      // Reset to current time
      const now = new Date();
      let h = now.getHours();
      const m = now.getMinutes();
      const p = h >= 12 ? 'PM' : 'AM';
      h = h % 12 || 12;
      setHours(h.toString());
      setMinutes(m.toString().padStart(2, '0'));
      setPeriod(p);
    }, 3000);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-900 via-red-900 to-slate-900 flex items-center justify-center p-4">
      <div className="absolute inset-0 overflow-hidden">
        <div className="absolute -top-40 -right-40 w-80 h-80 bg-red-500/20 rounded-full blur-3xl" />
        <div className="absolute -bottom-40 -left-40 w-80 h-80 bg-orange-500/20 rounded-full blur-3xl" />
      </div>

      <AnimatePresence mode="wait">
        {isSuccess ? (
          <motion.div
            key="success"
            initial={{ opacity: 0, scale: 0.8 }}
            animate={{ opacity: 1, scale: 1 }}
            exit={{ opacity: 0, scale: 0.8 }}
            className="relative z-10 text-center"
          >
            <motion.div
              initial={{ scale: 0 }}
              animate={{ scale: 1 }}
              transition={{ type: "spring", delay: 0.2 }}
              className="w-24 h-24 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <CheckCircle2 className="w-12 h-12 text-green-400" />
            </motion.div>
            <h2 className="text-3xl font-bold text-white mb-2">You're Checked In!</h2>
            <p className="text-red-200">Welcome to practice, {name}!</p>
          </motion.div>
        ) : (
          <motion.div
            key="form"
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            exit={{ opacity: 0, y: -20 }}
            className="relative z-10 w-full max-w-md"
          >
            <Card className="bg-white/10 backdrop-blur-xl border-white/20 shadow-2xl">
              <CardHeader className="text-center pb-2">
                <div className="w-16 h-16 bg-gradient-to-br from-red-500 to-orange-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                  <Users className="w-8 h-8 text-white" />
                </div>
                <CardTitle className="text-2xl font-bold text-white">
                  Clockwork Mania 4013
                </CardTitle>
                <p className="text-red-200 text-sm mt-1">Attendance Check-In</p>
              </CardHeader>

              <CardContent className="pt-6">
                <form onSubmit={handleSubmit} className="space-y-5">
                  <div className="relative">
                    <Label className="text-red-100 text-sm font-medium mb-2 block">
                      Your Name
                    </Label>
                    <Input
                      value={name}
                      onChange={(e) => setName(e.target.value)}
                      placeholder="Start typing your name..."
                      className="bg-white/10 border-white/20 text-white placeholder:text-red-300/50 h-12 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent"
                      onFocus={() => name.length > 0 && setShowSuggestions(filteredStudents.length > 0)}
                      onBlur={() => setTimeout(() => setShowSuggestions(false), 200)}
                    />
                    <AnimatePresence>
                      {showSuggestions && (
                        <motion.div
                          initial={{ opacity: 0, y: -10 }}
                          animate={{ opacity: 1, y: 0 }}
                          exit={{ opacity: 0, y: -10 }}
                          className="absolute z-20 w-full mt-1 bg-slate-800 border border-white/20 rounded-xl overflow-hidden shadow-xl"
                        >
                          {filteredStudents.slice(0, 5).map((student) => (
                            <button
                              key={student.id}
                              type="button"
                              onClick={() => selectStudent(student)}
                              className="w-full px-4 py-3 text-left text-white hover:bg-red-500/30 transition-colors flex items-center justify-between"
                            >
                              <span>{student.name}</span>
                              <span className="text-red-300 text-xs">ID: {student.school_id}</span>
                            </button>
                          ))}
                        </motion.div>
                      )}
                    </AnimatePresence>
                  </div>

                  <div>
                    <Label className="text-red-100 text-sm font-medium mb-2 block">
                      Select Your Team
                    </Label>
                    <Select value={team} onValueChange={setTeam}>
                      <SelectTrigger className="bg-white/10 border-white/20 text-white h-12 rounded-xl [&>span]:text-white">
                        <SelectValue placeholder="Choose your team" />
                      </SelectTrigger>
                      <SelectContent className="bg-slate-800 border-white/20">
                        {TEAMS.map((t) => (
                          <SelectItem 
                            key={t} 
                            value={t}
                            className="text-white hover:bg-red-500/30 focus:bg-red-500/30"
                          >
                            {t}
                          </SelectItem>
                        ))}
                      </SelectContent>
                    </Select>
                  </div>

                  {showTimeInput && (
                    <motion.div
                      initial={{ opacity: 0, height: 0 }}
                      animate={{ opacity: 1, height: 'auto' }}
                      exit={{ opacity: 0, height: 0 }}
                    >
                      <Label className="text-red-100 text-sm font-medium mb-2 block">
                        <Clock className="w-4 h-4 inline mr-2" />
                        Check-In Time
                      </Label>
                      <div className="flex gap-2">
                        <Input
                          type="number"
                          min="1"
                          max="12"
                          value={hours}
                          onChange={(e) => setHours(e.target.value)}
                          placeholder="HH"
                          className="bg-white/10 border-white/20 text-white placeholder:text-red-300/50 h-12 rounded-xl text-center w-20"
                        />
                        <span className="text-white text-2xl self-center">:</span>
                        <Input
                          type="number"
                          min="0"
                          max="59"
                          value={minutes}
                          onChange={(e) => setMinutes(e.target.value.slice(0, 2))}
                          placeholder="MM"
                          className="bg-white/10 border-white/20 text-white placeholder:text-red-300/50 h-12 rounded-xl text-center w-20"
                        />
                        <Select value={period} onValueChange={setPeriod}>
                          <SelectTrigger className="bg-white/10 border-white/20 text-white h-12 rounded-xl w-24 [&>span]:text-white">
                            <SelectValue />
                          </SelectTrigger>
                          <SelectContent className="bg-slate-800 border-white/20">
                            <SelectItem value="AM" className="text-white hover:bg-red-500/30 focus:bg-red-500/30">AM</SelectItem>
                            <SelectItem value="PM" className="text-white hover:bg-red-500/30 focus:bg-red-500/30">PM</SelectItem>
                          </SelectContent>
                        </Select>
                      </div>
                    </motion.div>
                  )}

                  {error && (
                    <motion.p
                      initial={{ opacity: 0 }}
                      animate={{ opacity: 1 }}
                      className="text-red-400 text-sm text-center bg-red-500/10 py-2 rounded-lg"
                    >
                      {error}
                    </motion.p>
                  )}

                  <Button
                    type="submit"
                    disabled={isSubmitting}
                    className="w-full h-12 bg-gradient-to-r from-red-500 to-orange-500 hover:from-red-600 hover:to-orange-600 text-white font-semibold rounded-xl shadow-lg shadow-red-500/30 transition-all duration-300"
                  >
                    {isSubmitting ? (
                      <Loader2 className="w-5 h-5 animate-spin" />
                    ) : (
                      'Check In'
                    )}
                  </Button>
                  
                  {!showTimeInput && (
                    <Button
                      type="button"
                      onClick={() => setShowTimeInput(true)}
                      variant="outline"
                      className="w-full h-10 bg-white/5 border-white/20 text-red-200 hover:bg-white/10"
                    >
                      <Clock className="w-4 h-4 mr-2" />
                      Change Time ({hours}:{minutes} {period})
                    </Button>
                  )}
                </form>
              </CardContent>
            </Card>
          </motion.div>
        )}
      </AnimatePresence>
    </div>
  );
}